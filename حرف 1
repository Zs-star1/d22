        function createWorksheet(letterData, index) {
            return `
                <div class="worksheet" id="worksheet-${index}">
                    <!-- رأس الصفحة -->
                    <div class="text-center border-b-2 border-blue-200 pb-4 mb-6">
                        <h1 class="text-3xl font-bold text-blue-800 mb-2">ورقة عمل حرف ${letterData.letter}</h1>
                        <p class="text-lg text-gray-600">الصف الأول الابتدائي</p>
                    </div>

                    <!-- عرض الحرف مع الحركات -->
                    <div class="bg-blue-50 rounded-lg p-6 mb-6 text-center">
                        <h2 class="text-xl font-bold text-blue-800 mb-4">الحرف مع الحركات</h2>
                        <div class="flex justify-around items-center">
                            <div class="text-center">
                                <div class="relative">
                                    <div class="letter-display">${letterData.letter}</div>
                                    <div class="harakat absolute -top-4 left-1/2 transform -translate-x-1/2">َ</div>
                                </div>
                                <p class="position-label mt-2">فتحة</p>
                            </div>
                            <div class="text-center">
                                <div class="relative">
                                    <div class="letter-display">${letterData.letter}</div>
                                    <div class="harakat absolute -top-4 left-1/2 transform -translate-x-1/2">ُ</div>
                                </div>
                                <p class="position-label mt-2">ضمة</p>
                            </div>
                            <div class="text-center">
                                <div class="letter-display">${letterData.letter}</div>
                                <div class="harakat">ِ</div>
                                <p class="position-label mt-2">كسرة</p>
                            </div>
                        </div>
                    </div>

                    <!-- الكلمات -->
                    <div class="flex-1">
                        <h2 class="text-xl font-bold text-green-800 mb-4 text-center">كلمات تحتوي على حرف ${letterData.letter}</h2>
                        
                        <div class="grid grid-cols-3 gap-4 mb-6">
                            <!-- في أول الكلمة -->
                            <div class="bg-green-50 rounded-lg p-4">
                                <h3 class="position-label text-center mb-3 text-green-700">في أول الكلمة</h3>
                                ${letterData.words.beginning.map(word => `
                                    <div class="mb-3">
                                        <div class="word-text text-center font-bold">${word}</div>
                                        <div class="dotted-line"></div>
                                    </div>
                                `).join('')}
                            </div>

                            <!-- في وسط الكلمة -->
                            <div class="bg-yellow-50 rounded-lg p-4">
                                <h3 class="position-label text-center mb-3 text-yellow-700">في وسط الكلمة</h3>
                                ${letterData.words.middle.map(word => `
                                    <div class="mb-3">
                                        <div class="word-text text-center font-bold">${word}</div>
                                        <div class="dotted-line"></div>
                                    </div>
                                `).join('')}
                            </div>

                            <!-- في آخر الكلمة -->
                            <div class="bg-red-50 rounded-lg p-4">
                                <h3 class="position-label text-center mb-3 text-red-700">في آخر الكلمة</h3>
                                ${letterData.words.end.map(word => `
                                    <div class="mb-3">
                                        <div class="word-text text-center font-bold">${word}</div>
                                        <div class="dotted-line"></div>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                    </div>

                    <!-- تمرين الكتابة -->
                    <div class="bg-gray-50 rounded-lg p-4 mt-auto">
                        <h3 class="position-label text-center mb-3 text-gray-700">تمرين الكتابة</h3>
                        <div class="grid grid-cols-6 gap-2">
                            ${Array(6).fill().map(() => `
                                <div class="border-2 border-dashed border-gray-300 h-16 rounded flex items-center justify-center">
                                    <span class="text-gray-400 text-2xl">${letterData.letter}</span>
                                </div>
                            `).join('')}
                        </div>
                    </div>

                    <!-- رقم الصفحة -->
                    <div class="text-center mt-4 text-sm text-gray-500">
                        صفحة ${index + 1} من 28
                    </div>
                </div>
            `;
        }

        function generateAllWorksheets() {
            const container = document.getElementById('worksheets-container');
            container.innerHTML = letters.map((letter, index) => createWorksheet(letter, index)).join('');
        }

        function showWorksheet(index) {
            const worksheets = document.querySelectorAll('.worksheet');
            if (index === 'all') {
                worksheets.forEach(ws => ws.style.display = 'flex');
            } else {
                worksheets.forEach((ws, i) => {
                    ws.style.display = i === index ? 'flex' : 'none';
                });
            }
        }

        function printWorksheets() {
            showWorksheet('all');
            setTimeout(() => {
                window.print();
            }, 100);
        }

        // إنشاء جميع أوراق العمل عند تحميل الصفحة
        generateAllWorksheets();
    </script>
